// http://eslint.org/docs/rules/
{
    "plugins": [
        "react"
    ],
    "ecmaFeatures": {
        "jsx": true,
        "modules": true,
        "classes": true
    },
    "env": {
        "browser": true,
        "prototypejs": true,
        "mocha": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "after": true,
        "afterEach": true,
        "before": true,
        "beforeEach": true,
        "describe": true,
        "it": true,
        "sinon": true,
        "require": true
    },
    "rules": {
        // jscs Specific rules
        "valid-jsdoc": 1,
        "no-multiple-empty-lines": 1,
        "semi-spacing": [2, {"before": false, "after": true}],
        "brace-style": [2, "1tbs", {"allowSingleLine": true}],
        "no-mixed-spaces-and-tabs": 2,
        "one-var": [2, {"initialized": "never"}],
        "comma-dangle": [2, "never"],
        "yoda": [2, "never"],
        "comma-style": [2, "last"],
        "newline-after-var": [1, "always"],
        "operator-linebreak": [2, "after"],
        "semi": [2, "always"],
        "space-infix-ops": 2,
        "space-return-throw-case": 0,
        "space-after-keywords": [2, "always"],
        "lines-around-comment": [2, {"afterBlockComment": false, "afterLineComment": false}],
        "space-before-blocks": [2, "always"],
        "key-spacing": [2, {"afterColon": true}],
        "consistent-this": [2, "self"],
        "indent": [2, 4, {"SwitchCase": 1}],
        "no-dupe-keys": 2,


        // from jshint(ish)
        "camelcase": [2, {properties: "never"}],
        "curly": [2, "all"],
        "eqeqeq": 0,
        "jsx-quotes": [1, "prefer-double"],
        "max-depth": [1, 3],
        "max-len": [2, 140, 4],
        "max-nested-callbacks": [2, 3],
        "max-params": [1, 5],
        "new-cap": 2,
        "no-bitwise": 2,
        "no-caller": 2,
        "no-empty": 1,
        "no-new": 2,
        "no-trailing-spaces": 2,
        "no-undef": 2,
        "no-unused-vars": 1,
        "no-use-before-define": [2, "nofunc"],
        "quotes": [2, "single"],
        "strict": [2, "global"],

        // Reset(ish). This will be the default in 1.0.0
        // so short-term, disabling rules that are handled by jscs.
        "no-multi-spaces": 0,
        "key-spacing": 0,

        // React & JSX goodness
        "react/jsx-closing-bracket-location": [1, {"location": "after-props"}],
        "react/jsx-curly-spacing": [1, "never"],
        "react/jsx-indent-props": [1, 4],
        "react/jsx-max-props-per-line": [1, { "maximum": 5 }],
        "react/jsx-no-duplicate-props": [1, { "ignoreCase": true }],
        "react/jsx-no-undef": 1,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/no-deprecated": [1, {"react": "0.13.0"}],
        "react/no-did-mount-set-state": [1, "allow-in-func"],
        "react/no-did-update-set-state": [1, "allow-in-func"],
        "react/no-direct-mutation-state": 1,
        "react/no-multi-comp": [1, { "ignoreStateless": true}],
        "react/no-unknown-property": 1,
        "react/prop-types": 1,
        "react/react-in-jsx-scope": 1,
        "react/self-closing-comp": 1,
        "react/sort-comp": 1,
        "react/wrap-multilines": 1
    }
}
